{
	"info": {
		"name": "RMS API Collection",
		"description": "Recruitment Management System - Backend API Collection",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"nabeelaltaf@outlook.com\",\n  \"password\": \"securepassword#123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Login with email and password. Returns JWT token and user info."
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const json = pm.response.json();",
									"    pm.collectionVariables.set('accessToken', json.accessToken);",
									"}"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Clients",
			"item": [
				{
					"name": "Create Client",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Acme Corporation\",\n  \"description\": \"Leading tech company\",\n  \"contactEmail\": \"contact@acme.com\",\n  \"contactPhone\": \"+1234567890\",\n  \"address\": \"123 Main St, City, Country\",\n  \"assignedEmployee\": \"507f1f77bcf86cd799439011\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/clients",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "clients"]
						},
						"description": "Create a new client. Admin only."
					}
				},
				{
					"name": "Get All Clients",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/clients",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "clients"]
						},
						"description": "Get all clients. Admins see all, Employees see only assigned clients."
					}
				},
				{
					"name": "Get Client by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/clients/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "clients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "507f1f77bcf86cd799439011"
								}
							]
						},
						"description": "Get a specific client. Employees can only access their assigned clients."
					}
				},
				{
					"name": "Update Client",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Company Name\",\n  \"description\": \"Updated description\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/clients/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "clients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "507f1f77bcf86cd799439011"
								}
							]
						},
						"description": "Update a client. Admin only."
					}
				},
				{
					"name": "Delete Client",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/clients/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "clients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "507f1f77bcf86cd799439011"
								}
							]
						},
						"description": "Soft delete a client. Admin only."
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000"
		},
		{
			"key": "accessToken",
			"value": ""
		}
	]
}
